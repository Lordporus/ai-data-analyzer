# Server
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# Upload limits
MAX_FILE_SIZE_MB=50

# LLM Configuration (optional — for RepairReasoningAgent)
LLM_PROVIDER=none
