# AI Data Analyzer — Environment Configuration
# Copy this to .env and fill in your values

# Server
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# Upload limits
MAX_FILE_SIZE_MB=50

# LLM Configuration (optional — system works without this)
LLM_PROVIDER=none
LLM_API_KEY=
LLM_MODEL=gemini-flash-latest
LLM_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/openai/chat/completions

# Branding
BRAND_NAME=AI Data Analyzer
BRAND_COLOR=#6C63FF
BRAND_LOGO_URL=

# Auth (optional — set strong values before production deployment)
JWT_SECRET=
API_KEY_ENTERPRISE=

# Usage tracking
ENABLE_USAGE_TRACKING=false
